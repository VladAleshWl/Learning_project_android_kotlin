<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/nachalo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nachalo_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_vihod"
        android:layout_width="139dp"
        android:layout_height="60dp"
        android:layout_marginStart="44dp"
        android:layout_marginBottom="56dp"
        android:text="ВЫХОД"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_koloda"
        android:layout_width="139dp"
        android:layout_height="60dp"
        android:layout_marginStart="-345dp"
        android:layout_marginBottom="8dp"
        android:text="КОЛОДА"
        app:layout_constraintBottom_toTopOf="@+id/button_vihod"
        app:layout_constraintStart_toStartOf="@+id/button_vihod" />

    <Button
        android:id="@+id/button_igra"
        android:layout_width="130dp"
        android:layout_height="59dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="200dp"
        android:layout_marginBottom="77dp"
        android:text="ИГРА"
        app:iconTint="#5C1616"
        app:layout_constraintBottom_toBottomOf="@+id/button_koloda"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/button_nastr"
        app:layout_constraintVertical_bias="0.901" />

    <Button
        android:id="@+id/button_ans"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="23dp"
        android:text="'?'"
        app:layout_constraintBaseline_toBaselineOf="@+id/button_nastr"
        app:layout_constraintEnd_toStartOf="@+id/button_nastr" />

    <Button
        android:id="@+id/button_nastr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="18dp"
        android:text="cetinks"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_kliker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="204dp"
        android:layout_marginEnd="4dp"
        android:text="klick"
        app:layout_constraintEnd_toStartOf="@+id/button_ans"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>